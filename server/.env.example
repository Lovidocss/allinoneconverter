# ─── Server ───
PORT=5000
NODE_ENV=development

# ─── Database ───
# For local MongoDB
MONGODB_URI=mongodb://localhost:27017/allinonepdf

# For MongoDB Atlas (recommended for production)
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/allinonepdf?retryWrites=true&w=majority

# ─── Authentication ───
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars

# ─── Admin Credentials (initial setup) ───
ADMIN_EMAIL=admin@allinonepdf.com
ADMIN_PASSWORD=admin123

# ─── File Upload ───
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600

# ─── CORS ───
# Frontend URL for CORS (update for production)
FRONTEND_URL=http://localhost:3000

# For production (update with your Vercel URL)
# FRONTEND_URL=https://yourdomain.vercel.app
